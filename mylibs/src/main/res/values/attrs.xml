<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="zTextView">

        <attr name="font_name" format="enum">
            <enum name="iran_yekan" value="0"/>
            <enum name="iran_sans" value="1"/>
            <enum name="b_yekan" value="2"/>
            <enum name="casablanca" value="2"/>
        </attr>

        <attr name="set_radius" format="boolean"/>
        <attr name="radius" format="integer"/>
        <attr name="radius_color" format="color"/>

    </declare-styleable>

    <declare-styleable name="zEditText">

        <attr name="edt_font_name" format="enum">
            <enum name="iran_yekan" value="0"/>
            <enum name="iran_sans" value="1"/>
            <enum name="b_yekan" value="2"/>
            <enum name="casablanca" value="2"/>
        </attr>

        <attr name="edt_set_radius" format="boolean"/>
        <attr name="edt_radius" format="integer"/>
        <attr name="edt_radius_color" format="color"/>

    </declare-styleable>


    <declare-styleable name="zButton">

        <attr name="button_font_name" format="enum">
            <enum name="iran_yekan" value="0"/>
            <enum name="iran_sans" value="1"/>
            <enum name="b_yekan" value="2"/>
            <enum name="casablanca" value="2"/>
        </attr>


    </declare-styleable>

    <declare-styleable name="zImageView" >
        <attr name="set_tint_color" format="boolean"/>
        <attr name="tint_color" format="color"/>
    </declare-styleable>
</resources>